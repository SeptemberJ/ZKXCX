.sexBlock{
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.sexItem , .sexItem_active{
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  opacity: .4;
}
.sexItem_active{
  opacity: 1;
}
.sexItem image , .sexItem_active image{
  width: 150rpx;
  height: 150rpx;
  display: block;
  margin-bottom: 10px;
}
.InfoItem{
  width: 100%;
  margin: 20px 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.label{
  width: 160rpx;
  font-size: 32rpx;
}
.InfoItem input{
  width: 300rpx;
  font-size: 32rpx;
  padding: 20rpx 20rpx;
  border-bottom: 1px solid #efefef;
}
.submitBlock{
  width:80%;
  margin: 50px auto 20px auto;
}
