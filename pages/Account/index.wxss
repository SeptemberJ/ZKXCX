.AccountWrap{
  width: 650rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  color: #fff;
  margin: 50px auto;
}
.AccountWrap text{
  text-align: center;
}
.AccountTit{
  font-size: 80rpx;
  font-weight: bold;
}
.AccountInputItem{
  width: 100%;
  height: 40px;
  margin: 10px auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.AccountInputItem input{
  flex: 1;
  padding: 20rpx;
  border: 2px solid #fff;
  color: #fff;
  font-size: 30rpx;
}

.PlaceholderWhite{     
  color: #fff !important;      
}   
.GetCode{
  width: 150rpx;
  height: calc(40px - 4px);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
  font-size: 22rpx;
  color: #fff;
  border: 2px solid #fff;
}
.CanNotGetCode{
  width: 150rpx;
  font-size: 22rpx;
  padding: 15rpx 10rpx;
  background: #ccc;
  color: #fff;
  text-align: center;
}
.AccountBt{
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #3498db;
  color: #fff;

}