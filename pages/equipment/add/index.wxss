.add{
  width: 650rpx;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.Inputitem{
  width: 100%;
  height: 30px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10px 0;
}
input{
  width: 550rpx;
  font-size: 30rpx;
  padding: 10rpx;
  border-bottom: 1px solid #efefef;
}
.Icon{
  width: 60rpx;
  height: 60rpx;
}
.Btn{
  width: 100px;
  height: 32px;
  line-height: 32px;
  text-align: center;
  background: #fff;
  background: red;
  color: #fff;
  border-radius: 5px;
  margin: 20px auto;
}