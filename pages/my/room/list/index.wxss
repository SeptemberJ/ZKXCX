.RoomTop{
  width: 100%;
  height: 180px;
  background: url('http://118.25.47.123:8080/upload/roomBg.jpg') no-repeat top center/cover ;
  position: relative;
}
.RoomAddInfo{
  width: 710rpx;
  height: 80px;
  position: absolute;
  top: 50%;
  left: 20rpx;
  transform: translateY(-50%);
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.RoomAddInfo text{
  font-size: 45rpx;
  color: #fff;
  font-weight: bold;
}
.RoomAddInfo image{
  width: 50rpx;
  height: 50rpx;
  display: inline-block;
}
.Room_tab{
  width: 750rpx;
  height: 80rpx;
  background: #fff;
  display: flex;
  flex-grow: 1;
  align-items: center;
  justify-content: space-around;
}
.Room_tab text{
  width: 100%;
  height: 100%;
  text-align: center;
  line-height:  80rpx;
}
.tab_ative{
  color: #3498db;
  font-weight: bold;
  border-bottom: 2px solid #3498db;
}

.EQList , .EQScene , .EQRoom{
  width: 750rpx;
  padding: 10rpx 0;
  display: flex;
  flex-direction: column;
  align-items: space-between;
  justify-content: center;
}
.EQList_item{
  width: 750rpx;
  height: 130rpx;
  display: flex;
  justify-content: flex-start;
  /* justify-content: space-between; */
  align-items: center; 
  background: #fff;
  border-bottom: 1px solid #efefef;
}
.EQList_item image{
  width: 80rpx;
  height: 80rpx;
  margin: 0 10rpx;
  border-radius: 50%;
  display: inline-block;
}
.EQList_item_text{
  width: calc(750rpx - 100rpx - 150rpx);
  height: 100%;
  padding-left: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}
.EQList_item_text_name{
  font-size: 32rpx;
  font-weight: bold;
}
.EQList_item_text_room{
  font-size: 30rpx;
  color: #ddd;
}
.ControlBt{
  width: 140rpx;
  height: 70rpx;
  margin-right: 10rpx;
  text-align: center;
  line-height: 70rpx;
  border: 1px solid green;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ControlBt_image{
   width: 140rpx;
  height: 70rpx;
  margin-right: 10rpx;
  text-align: center;
  line-height: 70rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ControlBt_image image{
  width: 50rpx;
  height: 50rpx;
  border-radius: 0;
}
.ControlBt_off{
  color: green;
}
.ControlBt_on{
  color: #fff;
  background: green;
}
.offline{
  color: #ddd;
}