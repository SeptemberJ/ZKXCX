<view class='InfoBlock'>
  <image class="Avatar"  wx:if="{{userInfo.avatarUrl}}" src="{{userInfo.avatarUrl}}" ></image>
  <image class="Avatar" wx:if="{{!userInfo.avatarUrl}}" src="../../../images/icon/unauthorized.png" bindtap='GetAuthorize'></image>
  <text class="nickName">{{AccountName}}</text>
  <view class='HorizontalColumn'>
    <view class='HorizontalItem RightBoder' bindtap='MyIntegral'>
      <image class='smallIcon' src='../../../images/icon/integral.png'></image>
      <text>我的积分</text>
    </view>
    <view class='HorizontalItem' bindtap='toMall'>
      <image class='smallIcon' src='../../../images/icon/shoppingMall.png'></image>
      <text>兑换商城</text>
    </view>
  </view>
</view>


<view class='optionList'>
  <view class='optionItem' bindtap='MyMessage'>
    <image class='smallIcon' src='../../../images/icon/my_message.png'></image>
    <view class='optionTit'>
      <text>我的消息</text>
      <text class='MessageCount' style='color:red;'>{{MessageCount>0?MessageCount:''}}</text>
    </view>
    <image class='smallIcon_arrow' src='../../../images/icon/arrow_black.png'></image>
  </view>

  <view class='optionItem' bindtap='MyRelease'>
    <image class='smallIcon' src='../../../images/icon/Release.png'></image>
    <text class='optionTit'>我的动态</text>
    <image class='smallIcon_arrow' src='../../../images/icon/arrow_black.png'></image>
  </view>
</view>

<view class='optionList'>
  <view class='optionItem' bindtap='MyWeight'>
    <image class='smallIcon' src='../../../images/icon/weight.png'></image>
    <text class='optionTit'>我的体重</text>
    <image class='smallIcon_arrow' src='../../../images/icon/arrow_black.png'></image>
  </view>

  <view class='optionItem' bindtap='MyDiet'>
