    <text class='optionTit'>我的饮食</text>
    <image class='smallIcon_arrow' src='../../../images/icon/arrow_black.png'></image>
  </view>

  <view class='optionItem' bindtap='ToCookingRecord'>
    <image class='smallIcon' src='../../../images/icon/cookingRecord.png'></image>
    <text class='optionTit'>烹饪记录</text>
    <image class='smallIcon_arrow' src='../../../images/icon/arrow_black.png'></image>
  </view> 
</view>


