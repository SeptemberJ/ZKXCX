.temperature{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.temperature_topBlock{
  width: 710rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.temperature_midBlock{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.temperature_midBlock image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.airQuality{
  width: 100%;
  height: 150px;
  margin: 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #fff;
  background-color: #21D4FD;
  background-image: linear-gradient(270deg, #21D4FD 0%, #3321ff 100%);

}
.airQuality_aqi{
  width: 250rpx;
  height: 150px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.airQuality_aqi text{
  font-size: 60px;
}
.airQuality_tip{
  width: calc(100% - 250rpx - 20rpx);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.colorfulBlock{
  width: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 5rpx 10rpx;
  margin-bottom: 5px;
  border-radius: 5rpx;
  font-weight: bold;
  color: #333;
}
.level_1{
  background: #01e400;
}
.level_2{
  background: yellow;
}
.level_3{
  background: #fea500;
}
.level_4{
  background: #fe0000;
}
.level_5{
  background: #81007f;
}
.level_6{
  background: #7e0123;
}
/*lifeSuggestion  */
.lifeSuggestion{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.suggestionItem{
  width: calc(100% - 40rpx);
  padding: 10rpx 20rpx;
  margin-bottom: 20px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.suggestionItem_left{
  width: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.suggestionItem_right{
  width: calc(100% - 200rpx);
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
.suggestionItem_icon{
  width: 100rpx;
  height: 100rpx;
  display: block;
}
.suggestionItem_kind{
  /* margin-top: 8px; */

}
.suggestionItem_level{
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 5px;
}