/*InfoNull  */
.InfoNull{
    width: 100%;
	  display: flex;
    flex-direction: column;
	  align-items: center;
    margin: 20rpx auto;
    text-align: center;
    color: #8a8a8a;
}
.InfoNull image{
    width: 120rpx;
	  height: 120rpx;
    margin: 40rpx auto;
