.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 0;
  box-sizing: border-box;
  position: relative;  
}
page text{
  font-size: 30rpx;
}
.wrap{
  padding: 20px;
}
.ColorWhite{
  color: #fff;
}
.ColorRed{
  color: red;
}
.BgRed{
  background: red;
}
.BgGray{
  background: #333;
}
.TextAlignL{
  text-align: left;
}
.Bold{
  font-weight: bold;
}
.Block{
  display: block;
}
.MarginTB_10{
  margin: 10px auto;
}
.MarginB_10{
  margin-bottom: 10px;
}
.MarginT_10{
  margin-top: 10px !important;
}
.MarginT_40{
  margin-top: 40px !important;
}
.MarginB_20{
  margin-bottom: 20px;
}
.Title{
  font-size: 40rpx;
}
.smallIcon{
  width: 50rpx;
  height: 50rpx;
  margin: 0 5rpx;
  display: block;
}
.MiddleSizeIcon{
  width: 80rpx;
  height: 80rpx;
  display: block;
}
.smallIcon_arrow{
  width: 50rpx;
  height: 50rpx;
  display: block;
}
.Blank{
  width: 100%;
  height: 5px;
  background: #efefef;
}
.HarfLongBt{
  width: 200rpx;
  height: 32px;
  line-height: 32px;
  font-size: 16px;
}

 .FixedBottomBt{
  position: fixed;
  left: 50%;
  bottom: 20px;
  transform: translateX(-50%);
}
.TopFixedSubmitBt{
  width: 200rpx;
  height: 30px;
  float: right;
  display: block;
  background: #3498db;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  line-height: 30px;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
.TopFixedSubmitBt_disabled{
  width: 200rpx;
  height: 30px;
  float: right;
  display: block;
  background: #ccc;
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  line-height: 30px;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
.TopSubmitBt{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  box-shadow: 0px 5px 5px #888888;
}
